<header class="bg-pink-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
    <a href="/" class="flex items-center space-x-2 font-semibold text-xl">
      <%= image_tag 'pojihome_logo.png', size: "40x40", alt: "ポジほめワード ロゴ" %>
      <span class="text-green-500">ポジ</span>
      <span class="text-yellow-500">ほめ</span>
      <span class="text-red-600">ワード</span>
    </a>

    <!-- ハンバーガーボタン（モバイル用） -->
    <button id="hamburger-button" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- デスクトップメニュー -->
    <div class="hidden md:flex items-center space-x-6 text-lg">
      <nav class="flex items-center space-x-6">
        <% if user_signed_in? %>
          <!-- ドロップダウン -->
          <div class="relative">
            <button id="dropdown-button" class="text-gray-800 font-medium focus:outline-none">
              ポジティブワード ▼
            </button>
            <div id="dropdown-menu" class="absolute left-0 mt-2 w-64 bg-white rounded-md shadow-lg z-20 hidden">
              <a href="/ai_messages/new" class="block px-4 py-2 text-gray-700 hover:bg-yellow-100">作る</a>
              <a href="/userpages" class="block px-4 py-2 text-gray-700 hover:bg-yellow-100">振り返る</a>
              <a href="/posts" class="block px-4 py-2 text-gray-700 hover:bg-yellow-100">共有する</a>
            </div>
          </div>

          <%= link_to "アカウント編集", edit_user_registration_path, class: "text-red-600 hover:text-red-800 font-medium" %>
          <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-red-600 hover:text-red-800 font-medium" %>
        <% else %>
          <%= link_to "サインイン", new_user_registration_path, class: "text-gray-800 hover:text-yellow-700 font-medium" %>
          <%= link_to "ログイン", new_user_session_path, class: "text-gray-800 hover:text-yellow-700 font-medium" %>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- モバイルメニュー -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4 space-y-2 text-lg">
    <% if user_signed_in? %>
      <div class="space-y-1">
        <a href="/ai_messages/new" class="block text-gray-800 hover:text-yellow-700">作る</a>
        <a href="/userpages" class="block text-gray-800 hover:text-yellow-700">振り返る</a>
        <a href="/posts" class="block text-gray-800 hover:text-yellow-700">共有する</a>
        <%= link_to "アカウント編集", edit_user_registration_path, class: "block text-red-600 hover:text-red-800" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "block text-red-600 hover:text-red-800" %>
      </div>
    <% else %>
      <%= link_to "サインイン", new_user_registration_path, class: "block text-gray-800 hover:text-yellow-700" %>
      <%= link_to "ログイン", new_user_session_path, class: "block text-gray-800 hover:text-yellow-700" %>
    <% end %>
  </div>
</header>
