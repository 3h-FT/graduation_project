<% content_for :title, "新規登録" %>

<div class="sm:mx-auto sm:w-full sm:max-w-lg">
  <h2 class="mt-2 text-center text-2xl sm:text-3xl font-bold tracking-tight text-gray-900">新規登録</h2>
</div>

<div class="mt-4 sm:mx-auto sm:w-full sm:max-w-lg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-4">
      <%= f.label :username, "ユーザー名", class: "block text-lg sm:text-xl font-medium text-gray-900" %>
      <%= f.text_field :username, class: "mt-2 block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 border border-gray-300 focus:outline-indigo-600" %>
    </div>

    <div class="mt-4">
      <%= f.label :email, "メールアドレス", class: "block text-lg sm:text-xl font-medium text-gray-900" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 border border-gray-300 focus:outline-indigo-600" %>
    </div>

    <div class="mt-4">
      <%= f.label :password, "パスワード", class: "block text-lg sm:text-xl font-medium text-gray-900" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 border border-gray-300 focus:outline-indigo-600" %>
    </div>

    <div class="mt-4">
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-lg sm:text-xl font-medium text-gray-900" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 border border-gray-300 focus:outline-indigo-600" %>
    </div>

    <div class="mt-6">
      <%= f.submit "登録", class: "flex w-full justify-center rounded-md bg-indigo-600 px-4 py-2 text-base font-semibold text-white shadow-xs hover:bg-indigo-500 focus:outline-2 focus:outline-indigo-600" %>
    </div>

    <div class="mt-2 text-center text-base sm:text-lg text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>