<% content_for :title, "お問い合わせフォーム" %>

<div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
  <div class="p-8">
    <h2 class="text-3xl font-semibold text-red-400 text-center mb-6">
      お問い合わせフォーム
    </h2>

    <% if @contact.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <ul class="list-disc pl-5">
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @contact, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, "お名前", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, placeholder: "お名前", required: true, class: "w-full px-4 py-3  border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300" %>
      </div>

      <div>
        <%= f.label :content, "お問合せ内容", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", required: true, rows: 5, class: "w-full px-4 py-3  border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300" %>
      </div>

      <div class="flex flex-col sm:flex-row justify-center gap-4 mt-6">
        <%= f.button type: "submit", class: "w-full sm:w-auto bg-red-400 hover:bg-red-500 text-white py-3 px-8 rounded-full text-lg font-semibold shadow-md cursor-pointer flex items-center justify-center gap-2" do %>
          送信 <i class="fas fa-paper-plane"></i>
        <% end %>
      </div>

        <%= link_to "トップにもどる", root_path, class: 'text-center text-gray-500 hover:text-gray-700 hover:underline text-lg block' %>

    <% end %>
  </div>
</div>
