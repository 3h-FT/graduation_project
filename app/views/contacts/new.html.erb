<% content_for :title, "お問い合わせフォーム" %>
<div class="mt-8 flex items-center justify-center px-4">
  <div class="max-w-3xl w-full bg-white rounded-2xl shadow-lg overflow-hidden p-8">
    <h2 class="text-2xl font-semibold text-red-400 text-center mt-6 mb-2">
      お問い合わせ
    </h2>
  
    <% if @contact.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <ul class="list-disc pl-5">
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @contact, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, "お名前", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, placeholder: "お名前", required: true, autofocus: true, class: "w-full px-4 py-3  border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300 rounded-md" %>
      </div>

      <div>     
        <%= f.label :email, "メールアドレス（返信が必要な方のみ）", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, placeholder: "返信が必要な方はご記入ください", class: "w-full px-4 py-3 border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300 rounded-md" %>
      </div>
      
      <div>
        <%= f.label :content, "お問合せ内容", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", required: true, rows: 5, class: "w-full px-4 py-3  border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300 rounded-md" %>
      </div>

      <div class="flex flex-col sm:flex-row justify-center gap-4 mt-6">
        <%= f.button type: "submit", class: "w-full sm:w-auto bg-red-400 hover:bg-red-500 text-white py-3 px-8 rounded-full text-lg font-semibold shadow-md cursor-pointer flex items-center justify-center gap-2" do %>
          送信 <i class="fas fa-paper-plane"></i>
        <% end %>
      </div>
      <div class="mt-6 mb-6 space-y-3 text-center">
        <%= link_to "トップに戻る", root_path, class: 'text-lg text-blue-500 font-semibold hover:text-blue-700 hover:underline' %>
      </div>
    <% end %>
  </div>
</div>
