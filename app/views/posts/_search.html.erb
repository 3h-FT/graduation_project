<%= search_form_for q, url: url, method: :get, html: { class: 'w-full' } do |f| %>
  <div class="relative mb-6 w-full sm:max-w-md md:max-w-lg"
       data-controller="autocomplete"
       data-autocomplete-url-value="<%= autocomplete_url %>"
       role="combobox">
    
    <div class="flex space-x-2">
      <%= f.text_field :post_word_or_caption_cont,
        class: 'flex-grow p-4 border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-red-300 rounded-full',
        placeholder: 'ポジティブワードまたはキャプションで検索',
        data: { autocomplete_target: "input" } %>

      <%= f.submit '検索',
        class: 'whitespace-nowrap text-white bg-red-400 hover:bg-red-500 py-3 px-6 rounded-full shadow-md cursor-pointer transition duration-200' %>
    </div>

    <ul class="absolute z-50 mt-1 bg-white  w-full sm:max-w-md md:max-w-lg border border-gray-200 rounded-md shadow-md text-sm"
        data-autocomplete-target="results">
    </ul>

  </div>
<% end %>