<% content_for :title, "ユーザーページ" %>

  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden p-8">
    <h2 class="text-center text-2xl sm:text-3xl font-semibold text-yellow-600 mb-6">
      <%= current_user.username %> さんのページ
    </h2>

    <div class="mt-6 text-center space-y-3">
      <%= link_to "トップページに戻る", root_path, class: 'inline-block text-lg font-semibold text-blue-500 hover:text-blue-700 hover:underline' %>
      <%= link_to "ポジティブワードを作ろう", new_ai_message_path, class: 'inline-block text-lg font-semibold text-blue-500 hover:text-blue-700 hover:underline' %>
       <%= link_to "アカウントを編集する", edit_user_registration_path, class: 'mt-6 inline-block text-sm sm:text-base font-medium text-white bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded-full shadow-md' %>
      <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: 'inline-block text-sm font-medium text-white bg-red-500 hover:bg-red-600 px-4 py-2 rounded-full shadow-md' %>
    </div>
  </div>
</div>