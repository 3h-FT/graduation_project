<h3 class="text-center text-xl font-semibold text-yellow-700 py-4">
  カスタムワード: <span class="text-yellow-500"><%= @custom_words.count %></span> 個
</h3>
<ul class="mb-8 space-y-2 text-gray-700">
  <% words.each do |word| %>
    <li class="py-2 px-4 bg-white hover:bg-blue-50 text-gray-800 rounded-xl shadow-sm font-semibold leading-relaxed flex items-center justify-between gap-x-2 flex-wrap">
      <%= link_to userpage_path(word), class: "flex-grow break-words min-w-0" do %>
        <%= word.word %>
      <% end %>

      <% if user_signed_in? %>
        <div
          x-data="{ open: false, dropUp: false }"
          x-init="$watch('open', value => {
            if (value) {
              const rect = $el.getBoundingClientRect();
              dropUp = (window.innerHeight - rect.bottom) < 200;
            }
          })"
          class="relative inline-block text-left shrink-0"
        >
          <button data-testid="menu-toggle" @click="open = !open" class="text-gray-600 hover:text-gray-800 focus:outline-none" aria-haspopup="true" aria-expanded="open">
            <i class="bi bi-three-dots-vertical text-xl"></i>
          </button>

          <div
            x-show="open"
            @click.outside="open = false"
            x-transition
            :class="dropUp ? 'bottom-full mb-2' : 'mt-2'"
            class="absolute right-0 z-50 w-48 origin-top-right bg-white border border-gray-200 rounded-lg shadow-lg py-2"
            style="display: none;"
          >
            <%= link_to edit_userpage_path(word), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <i class="bi bi-pencil-fill mr-1"></i> 編集
            <% end %>

            <%= button_to userpage_path(word), method: :delete, form: { data: { turbo: false } }, class: "w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-red-100" do %>
              <i class="bi bi-trash-fill mr-1"></i> 削除
            <% end %>

            <button class="w-full text-left block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 copy-button" data-word="<%= word.word %>">
              <i class="bi bi-copy mr-1 text-blue-500 mr-1"></i> コピー
            </button>
          </div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
