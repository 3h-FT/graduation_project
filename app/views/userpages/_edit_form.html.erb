<turbo-frame id="word_<%= positive_word.id %>">
  <%= form_with model: positive_word, url: userpage_path(positive_word), method: :patch, data: { turbo_frame: "word_#{positive_word.id}" }, class: 'space-y-6' do |f| %>

    <div>
      <%= f.text_field :word, required: true, autofocus: true, class: "w-full p-4 rounded-full border border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-pink-300" %>
    </div>

    <div class="text-center">
      <%= f.submit "更新", class: "bg-red-400 hover:bg-red-500 text-white font-semibold py-3 px-8 rounded-full shadow-md focus:outline-none focus:ring-2 focus:ring-pink-300" %>
      <%= link_to "キャンセル", userpage_path(@positive_word), class: 'text-center text-gray-500 hover:text-gray-700 hover:underline text-lg block' %>
    </div>
  <% end %>
</turbo-frame>