<%#「前へ」リンクのパーツ。一つ前のページへ戻るリンクです。%>
<% if current_page.first? %>
  <span class="bg-gray-200 text-gray-400 font-light py-2 px-4 border border-gray-300 rounded shadow cursor-not-allowed">
    <%= t('views.pagination.previous').html_safe %>
  </span>
<% else %>
  <%= link_to t('views.pagination.previous').html_safe, url, rel: 'prev', remote: remote, class: "bg-white hover:bg-gray-100 text-gray-800 font-light py-2 px-4 border border-gray-400 rounded shadow" %>
<% end %>
