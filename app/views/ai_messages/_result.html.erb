<% if local_assigns[:show_header_and_button] != false %>
  <h3 class="text-2xl font-semibold text-red-400 text-center mb-6">ポジティブワード生成結果</h3>
<% end %>

<p class="py-2 px-4 bg-white hover:bg-blue-50 text-gray-800 rounded-xl shadow-sm font-semibold leading-relaxed flex items-center justify-between gap-x-2 flex-wrap">
  <span class="flex-grow break-words"><%= positive_word.word %></span>

  <% path = local_assigns[:from].present? ? edit_ai_message_path(positive_word, from: local_assigns[:from]) : edit_ai_message_path(positive_word) %>
  <%= link_to path, class: "text-gray-500 hover:text-gray-600" do %>
    <i class="bi bi-pencil-fill"></i>
  <% end %>
  
  <% if user_signed_in? %>
    <%= render 'shared/word_favorites_button', positive_word: positive_word %>
  <% end %>

  <i class="bi bi-copy ml-2 text-blue-500 hover:text-blue-700 cursor-pointer copy-button" data-word="<%= positive_word.word %>"></i>
</p>

<% if local_assigns[:show_header_and_button] != false %>
  <div class="mt-8 flex justify-center">
    <%= link_to "もう一度作る", new_ai_message_path, class: "px-6 py-3 bg-red-400 text-white rounded-full hover:bg-red-500" %>
  </div>
<% end %>


