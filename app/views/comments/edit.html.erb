<div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">
  <div class="bg-yellow-100 py-8 px-6 rounded-t-2xl border-b border-yellow-200">
    <h2 class="text-center text-3xl font-bold text-yellow-600">
      <i class="fas fa-comment-dots text-yellow-400 mr-2"></i> コメント編集
    </h2>
  </div>

  <div class="p-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200">
      <div class="p-6">
        <%= render "form", comment: @comment, post: @post %>
      </div>
    </div>

    <div class="mb-6 flex justify-center">
      <%= link_to "投稿詳細に戻る", post_path(@post), class: 'text-blue-500 hover:text-blue-700 text-lg font-semibold underline' %>
    </div>
  </div>
</div>
